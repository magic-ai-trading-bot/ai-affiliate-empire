# Environment
NODE_ENV=development
PORT=3000

# AWS Secrets Manager (Optional - for production)
# Set AWS_SECRETS_MANAGER_ENABLED=true to fetch secrets from AWS instead of .env
# Secrets will fallback to environment variables if AWS is not configured
AWS_SECRETS_MANAGER_ENABLED=false
AWS_REGION=us-east-1
SECRET_NAME_PREFIX=ai-affiliate-empire

# Database
# Connection pooling config: connection_limit=20 (max connections), pool_timeout=20 (seconds)
DATABASE_URL="postgresql://user:password@localhost:5432/ai_affiliate_empire?schema=public&connection_limit=20&pool_timeout=20"
# Direct URL for migrations (no connection pooling)
DIRECT_DATABASE_URL="postgresql://user:password@localhost:5432/ai_affiliate_empire?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys - OpenAI (Script Generation)
OPENAI_API_KEY=sk-proj-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MOCK_MODE=false # Set to 'true' for development without API key

# API Keys - Anthropic Claude (Blog Post Generation)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MOCK_MODE=false # Set to 'true' for development without API key

# API Keys - ElevenLabs (Voice Generation)
ELEVENLABS_API_KEY=...
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
ELEVENLABS_MOCK_MODE=false # Set to 'true' for development without API key

# API Keys - Pika Labs (Video Generation)
PIKALABS_API_KEY=...
PIKALABS_API_URL=https://api.pikalabs.com/v1
PIKALABS_MOCK_MODE=false # Set to 'true' for development without API key

# API Keys - DALL-E 3 (Thumbnail Generation)
DALLE_API_KEY=sk-proj-... # Same as OpenAI

# Amazon Associates (Product Advertising API)
AMAZON_ACCESS_KEY=...
AMAZON_SECRET_KEY=...
AMAZON_PARTNER_TAG=... # Format: yourname-20
AMAZON_REGION=us-east-1
AMAZON_MOCK_MODE=false # Set to 'true' for development without API key

# Storage Directory (for audio/video files)
STORAGE_DIR=/tmp/media

# ShareASale
SHARESALE_MERCHANT_ID=...
SHARESALE_API_TOKEN=...
SHARESALE_API_SECRET=...

# CJ Affiliate
CJ_API_KEY=...

# YouTube Data API
YOUTUBE_CLIENT_ID=...
YOUTUBE_CLIENT_SECRET=...
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/youtube/callback

# TikTok API
TIKTOK_CLIENT_KEY=...
TIKTOK_CLIENT_SECRET=...

# Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=...
INSTAGRAM_BUSINESS_ACCOUNT_ID=...

# Facebook Graph API
FACEBOOK_APP_ID=...
FACEBOOK_APP_SECRET=...
FACEBOOK_PAGE_ACCESS_TOKEN=...

# Cloudflare R2 (Video Storage)
R2_ACCOUNT_ID=...
R2_ACCESS_KEY_ID=...
R2_SECRET_ACCESS_KEY=...
R2_BUCKET_NAME=ai-affiliate-videos
R2_PUBLIC_URL=https://...

# Temporal Orchestration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Security
# IMPORTANT: Change these secrets in production! Minimum 32 characters required.
JWT_SECRET=your-super-secret-jwt-key-change-this-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Discord Webhook (Notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
